    <table class="display table table-striped table-condensed table-bordered" id="example" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th class="col-checkbox"><input class="check-all" value="" type="checkbox"></th>
            <th><?php echo $this->translate('ID')?></th>
            <th><?php echo $this->translate('First name')?></th>
            <th><?php echo $this->translate('Last name')?></th>
            <th><?php echo $this->translate('Username')?></th>
            <th><?php echo $this->translate('Email')?></th>
            <th><?php echo $this->translate('Created at')?></th>
